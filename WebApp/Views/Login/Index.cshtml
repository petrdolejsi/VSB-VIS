
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Login | IS F1</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style type="text/css">
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }

            .form-signin .form-signin-heading,
            .form-signin .checkbox {
                margin-bottom: 10px;
            }

            .form-signin input[type="text"],
            .form-signin input[type="password"] {
                font-size: 16px;
                height: auto;
                margin-bottom: 15px;
                padding: 7px 9px;
            }
    </style>
</head>

<body>

    <div class="container">
        @using (Html.BeginForm("SignIn", "Login", FormMethod.Post, new { @class = "form-signin" }))
        {
            <input type="text" name="returnurl" value="@Convert.ToString(Request.QueryString["ReturnUrl"])" hidden>
            <h2 class="form-signin-heading">Přihlášení</h2>
             if (TempData["LoginError"] != null)
             {
                 <div class="callout callout-danger">
                     <p>@TempData["LoginError"]</p>
                 </div>
             }
            <input type="text" name="login" class="input-block-level" placeholder="Login">
            <input type="password" name="password" class="input-block-level" placeholder="Heslo">
            <button class="btn btn-large btn-primary" type="submit">Přihlásit se</button>
            <p><a href="@Url.Action("Index","Home")">Na hlavní stranu</a></p>
        }

    </div> <!-- /container -->
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

