@using Library.Models
@model Drivers
@{
    ViewBag.Title = "Úprava jezdce - " + @ViewBag.FirstName + " " + @ViewBag.LastName;
}

<div>
    <a class="btn btn-primary btn-sm pull-right" href="@Url.Action("Detail", "Drivers", new {id = @Model.Id})">Zpět na detail</a>
    <h2>Úprava jezdce - @ViewBag.FirstName @ViewBag.LastName</h2>
</div>

@using (Html.BeginForm("Edit", "Drivers", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </div>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FirstName, null, new { @class = "help-block" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </div>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LastName, null, new { @class = "help-block" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </div>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Number, new { @class = "form-control", @type = "number" })
            @Html.ValidationMessageFor(model => model.Number, null, new { @class = "help-block" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </div>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.DateOfBirth, null, new { @class = "form-control", @id = "datetimepicker" })
            @Html.ValidationMessageFor(model => model.DateOfBirth, null, new { @class = "help-block" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team)
        </div>
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.Team.Id, new SelectList((IEnumerable<Teams>)ViewBag.Teams, "ID", "Name", (Model.Team.Id)), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Team, null, new { @class = "help-block" })
        </div>
    </div>
    <div class="form-group">
        <i class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </i>
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.State.Id, new SelectList(ViewBag.States, "ID", "Nationality", (Model.State.Id)), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.State, null, new { @class = "help-block" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Uložit</button>
        </div>
    </div>

}