@using Library.Models
@model Gp
@{
    ViewBag.Title = "Úprava " + @ViewBag.Name;
}

<div>
    <a class="btn btn-primary btn-sm pull-right" href="@Url.Action("Detail", "Gp", new {id = @Model.Id})">Zpět na detail</a>
    <h2>Úprava @ViewBag.Name</h2>
</div>
@RenderPage("~/Views/Shared/InformationMessages.cshtml")
@using (Html.BeginForm("Edit", "Gp", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </div>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name, null, new { @class = "help-block" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Circuit)
        </div>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Circuit, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Circuit, null, new { @class = "help-block" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </div>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Date, null, new { @class = "form-control", @id = "datetimepicker" })
            @Html.ValidationMessageFor(model => model.Date, null, new { @class = "help-block" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lenght)
        </div>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Lenght, new { @class = "form-control", @type = "number" })
            @Html.ValidationMessageFor(model => model.Lenght, null, new { @class = "help-block" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Laps)
        </div>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Laps, new { @class = "form-control", @type = "number" })
            @Html.ValidationMessageFor(model => model.Laps, null, new { @class = "help-block" })
        </div>
    </div>
    <div class="form-group">
        <i class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </i>
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.State.Id, new SelectList(ViewBag.States, "ID", "Name", (Model.State.Id)), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.State, null, new { @class = "help-block" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Uložit</button>
        </div>
    </div>

}